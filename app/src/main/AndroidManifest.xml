<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobile99_final_project">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UserAdvertisementsActivity"></activity>
        <activity android:name=".AdvertisementCreationActivity" />
        <activity android:name=".AdvertisementViewActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".CategoriesActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".FirstPageActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>